@using fantasydg.Models.ViewModels
@model fantasydg.Models.Team

@{
    ViewBag.Title = "Team Settings";
}

<div class="container-fluid">
    <div class="row">
        <div class="col pt-3">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h3>Settings</h3>
                <a class="btn btn-outline-secondary" asp-controller="Team" asp-action="View" asp-route-teamId="@Model.TeamId">
                    ← Back to Team
                </a>
            </div>

            <hr style="width: 100%; margin: 0.5rem auto; border-top: 2px solid #444;" />

            @if (TempData["TeamSettingsSaved"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                    @TempData["TeamSettingsSaved"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="SaveTeamName" asp-controller="Team" method="post" class="mt-4" style="max-width: 400px;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="TeamId" value="@ViewBag.TeamId" />

                <div class="mb-3">
                    <label for="Name" class="form-label">Team Name</label>
                    <input type="text" name="Name" class="form-control" value="@ViewBag.TeamName" />
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
